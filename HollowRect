/this code makes the hollow-rectangle
public class HollowRect {
    public static void main(String[]args){
        int a = 4;
        int b=8;
        //outer; loop
        for (int i =1; i<=a; i++){
            //innerloop
            for (int j=1; j<=b; j++){
                //cell->(i,j)
                if(i==1||j==1 || i==a||j==b){
                    System.out.print("*");
                }else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}
